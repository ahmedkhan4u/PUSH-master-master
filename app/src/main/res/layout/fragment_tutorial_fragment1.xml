<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboard1"
    tools:context=".OnBoardingScreens.TutorialFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="24dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PUSH 2.0"
            android:textColor="@color/white"
            android:textSize="34dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tut1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The body achieves what the mind believes"
            android:fontFamily="@font/radomir_tinkov_gilroy_medium"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            >

            <ImageView
                android:layout_width="10sp"
                android:layout_height="10dp"
                android:src="@drawable/ic_filled_dot"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_unfilled_dot"
                android:layout_marginLeft="8dp"
                />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_unfilled_dot"
                android:layout_marginLeft="8dp"
                />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKIP"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:fontFamily="@font/radomir_tinkov_gilroy_medium"
            android:textColor="@color/white"
            android:id="@+id/skip"
            android:focusable="true"
            android:padding="8dp"
            android:visibility="gone"
            android:clickable="true"
            android:foreground="@drawable/custom_ripple"
            />
    </RelativeLayout>

</RelativeLayout>