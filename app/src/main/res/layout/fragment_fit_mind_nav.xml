<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    tools:context=".MyFragments.FitMindNavFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/img_fit_mind"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fit Mind"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                style="@style/TextAppearance.AppCompat.Title"
                android:textSize="16sp"
                android:id="@+id/title"
                android:fontFamily="@font/radomir_tinkov_gilroy_bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="lorem ipsum is a dummy text."
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:id="@+id/description"
                android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:weightSum="3"
                android:gravity="center"
                >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:background="@drawable/fit_mind_round_box"
                    android:gravity="center"
                    android:elevation="10dp"
                    android:id="@+id/fitmind_breathwork"
                    >


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_breathwork"
                            />

                        <com.push.sweateliteathletics.softrasol.TitileTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Breathwork"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/fit_mind_round_box"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:id="@+id/fitmind_mindset"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_mindset"
                            />

                        <com.push.sweateliteathletics.softrasol.TitileTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Mindset"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/fit_mind_round_box"
                    android:gravity="center"
                    android:id="@+id/fitmind_meditation"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_meditation"
                            />

                        <com.push.sweateliteathletics.softrasol.TitileTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Meditation"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:weightSum="3"
                android:gravity="center"
                >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/fit_mind_round_box"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:id="@+id/fitmind_motivation"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_challenges"
                            />

                        <com.push.sweateliteathletics.softrasol.TitileTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Motivation"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/fit_mind_round_box"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:id="@+id/fitmind_programs"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_programs"
                            />

                        <com.push.sweateliteathletics.softrasol.TitileTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Programs"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/fit_mind_round_box"
                    android:gravity="center"
                    android:id="@+id/fitmind_mypush"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_my_push"
                            />

                        <com.push.sweateliteathletics.softrasol.TitileTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="My Push"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>