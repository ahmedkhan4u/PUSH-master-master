<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LayRecord"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_black"
    tools:context=".MyFragments.PushFragment"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/toolbar_main"
            app:title="."
            >

            <com.push.sweateliteathletics.softrasol.TitileTextView
                android:id="@+id/textView1"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="3dp"
                android:text="My Push"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="18sp"

                />
        </androidx.appcompat.widget.Toolbar>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_push_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="Hi Fred,"
                android:textColor="#ffffff"
                android:fontFamily="@font/radomir_tinkov_gilroy_black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="23, june 2020"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:id="@+id/txt_push_current_date"
                android:textSize="12sp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/radomir_tinkov_gilroy_regular"
                />


        </RelativeLayout>


        <com.push.sweateliteathletics.softrasol.TitileTextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="3dp"
            android:text="My Personal Best"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/LayRecord2"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/round_corners_white_bg">

                        <ImageView
                            android:id="@+id/ivRecordDuration"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/time" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">


                            <com.push.sweateliteathletics.softrasol.FontTextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/Duration"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <Chronometer
                                android:id="@+id/chronoRec"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/dark_black"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LayRecord3"
                        android:padding="8dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/round_corners_white_bg">

                        <ImageView
                            android:id="@+id/ivRecordDistance"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/distance" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <com.push.sweateliteathletics.softrasol.FontTextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/Distance"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <com.push.sweateliteathletics.softrasol.FontTextView
                                android:id="@+id/tvRecordDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/dark_black"
                                android:textSize="10sp"
                                android:text="00.00"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:padding="8dp"
                        android:id="@+id/LayRecord4"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/round_corners_white_bg">

                        <ImageView
                            android:id="@+id/ivRecordSpeed"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"

                            android:src="@drawable/speed" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <com.push.sweateliteathletics.softrasol.FontTextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/Speed"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <com.push.sweateliteathletics.softrasol.FontTextView
                                android:id="@+id/tvRecordSpeed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/dark_black"
                                android:textSize="10sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginBottom="4dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/LayRecord5"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_corners_white_bg"
                        android:orientation="vertical"
                        android:padding="8dp"
                        >

                        <ImageView
                            android:id="@+id/ivRecordPace"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/time" />

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.push.sweateliteathletics.softrasol.FontTextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/Pace"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <com.push.sweateliteathletics.softrasol.FontTextView
                                android:textStyle="bold"
                                android:id="@+id/tvRecordPace"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:text="00.00"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LayRecord7"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/round_corners_white_bg"
                        android:padding="8dp"
                        android:orientation="vertical"
                        >

                        <ImageView
                            android:id="@+id/ivRecordCalories"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/calories" />

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.push.sweateliteathletics.softrasol.FontTextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:text="@string/Calories"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <com.push.sweateliteathletics.softrasol.FontTextView
                                android:textStyle="bold"
                                android:id="@+id/tvRecordCalories"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textColor="@color/dark_black"
                                android:text="00.00"
                                android:textSize="10sp" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.push.sweateliteathletics.softrasol.TitileTextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingTop="3dp"
            android:text="Push Goal"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"

                android:layout_marginTop="2dp"

                android:background="@drawable/btn_transparent_white_outline"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:id="@+id/txt_fitmind_goal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/radomir_tinkov_gilroy_bold"
                    android:gravity="center"
                    android:text="Push Goal"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtMindTime"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/radomir_tinkov_gilroy_regular"
                    android:text="D          H          M          S"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:textColor="@android:color/white" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/fitmind_day"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/timer_bg"
                        android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                        android:padding="4dp"
                        android:text="00"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/fitmind_hour"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/timer_bg"
                        android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                        android:padding="4dp"
                        android:text="00"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"

                        />

                    <TextView
                        android:id="@+id/fitmind_minute"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/timer_bg"
                        android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                        android:padding="4dp"
                        android:text="00"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"

                        />


                    <TextView
                        android:id="@+id/fitmind_seconds"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/timer_bg"
                        android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                        android:padding="4dp"
                        android:text="00"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"

                        />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_transparent_white_outline"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:layout_marginTop="2dp"
                android:id="@+id/push_goal_mind"
                android:layout_marginHorizontal="8dp"
                android:orientation="vertical"
                android:padding="4dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Push Goal"
                    android:layout_marginHorizontal="4dp"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="2dp"
                    android:id="@+id/txt_fitbody_goal"
                    android:fontFamily="@font/radomir_tinkov_gilroy_bold"
                    />

                <TextView
                    android:id="@+id/txtBodyTime"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/radomir_tinkov_gilroy_regular"
                    android:text="D          H          M          S"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="26dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:background="@drawable/timer_bg"
                        android:padding="4dp"
                        android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                        android:id="@+id/fitbody_day"
                        android:textColor="@android:color/black"

                        />

                    <TextView
                        android:layout_width="26dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:background="@drawable/timer_bg"
                        android:padding="4dp"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                        android:id="@+id/fitbody_hour"
                        android:textColor="@android:color/black"

                        />

                    <TextView
                        android:layout_width="26dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:background="@drawable/timer_bg"
                        android:padding="4dp"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                        android:id="@+id/fitbody_minute"
                        android:textColor="@android:color/black"

                        />


                    <TextView
                        android:layout_width="26dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:background="@drawable/timer_bg"
                        android:padding="4dp"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/radomir_tinkov_gilroy_medium"
                        android:id="@+id/fitbody_seconds"
                        android:textColor="@android:color/black"

                        />


                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.push.sweateliteathletics.softrasol.TitileTextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingTop="3dp"
                android:text="My Favorites"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_centerVertical="true"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:layout_marginBottom="4dp"
                android:id="@+id/txt_favorite"
                />


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerview_favorite"
                />

        </LinearLayout>


        <Button
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:background="@drawable/btn_transparent_white_outline"
            android:layout_gravity="end"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:text="My Programs"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:drawableRight="@drawable/ic_right_light"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:id="@+id/btn_push_myprograms"
            android:layout_marginBottom="24dp"
            />

    </LinearLayout>
</ScrollView>
