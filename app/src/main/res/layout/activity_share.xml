<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:background="@color/black"
    android:layout_width="match_parent"
    tools:context=".QuoreShare"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/relLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutShare1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:background="@color/black"
                android:visibility="visible"
                android:orientation="vertical"
                android:scaleType="centerInside">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/appicon" />

                    <com.push.sweateliteathletics.softrasol.FontTextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/imageView8"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textStyle="bold|italic" />

                    <com.push.sweateliteathletics.softrasol.FontTextView
                        android:id="@+id/tvDate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:text="Date"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/mapImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textColor="@color/fontcolorr"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvDistanceUnit1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="@string/km"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/fontcolorr"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvDurationUnit1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="@string/hhmm"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvAvgSpeed1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/fontcolorr"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvAvgSpeedUnit1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="@string/kph"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnShare1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutShare1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/tutorial_button"
                android:text="@string/share"
                android:visibility="gone"
                android:textColor="@color/fontcolorr"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/layoutShare2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnShare1"
                android:visibility="visible"
                android:layout_margin="20dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:scaleType="centerInside">

                <RelativeLayout
                    android:id="@+id/RelLay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/appicon" />

                    <com.push.sweateliteathletics.softrasol.FontTextView
                        android:id="@+id/tvAppName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/imageView9"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textStyle="bold|italic" />

                    <com.push.sweateliteathletics.softrasol.FontTextView
                        android:id="@+id/tvDate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:text="Date"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/RelLay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RelLay1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvDistance2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0"
                            android:textColor="@color/fontcolorr"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvDistanceUnit2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/km"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvDuration2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/fontcolorr"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvDurationUnit2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hhmm"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvCalories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/fontcolorr"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvCaloriesUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kcal"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/RelLay3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/RelLay2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvAvgSpeed2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/fontcolorr"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvAvgSpeedUnit2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kph"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvMaxSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/fontcolorr"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvMaxSpeedUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kph"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvPace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/fontcolorr"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <com.push.sweateliteathletics.softrasol.FontTextView
                            android:id="@+id/tvPaceUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <Button
            android:id="@+id/btnShare2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relLay"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/tutorial_button"
            android:text="@string/share"
            android:visibility="visible"
            android:textColor="@color/fontcolorr"
            android:textStyle="bold" />


    </RelativeLayout>
</ScrollView>
