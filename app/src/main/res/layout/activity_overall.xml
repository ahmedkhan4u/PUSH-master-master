<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LayOverall"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.push.sweateliteathletics.softrasol.FontTextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingTop="3dp"
            android:text="@string/overall"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="40dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LayOverall2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1.0"
        android:background="@drawable/overallback"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivOverallDuration"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingLeft="10dp"
            android:src="@drawable/time" />

        <com.push.sweateliteathletics.softrasol.FontTextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/Duration"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Chronometer
            android:id="@+id/chronoOverall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LayOverall3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1.0"
        android:background="@drawable/overallback"

        android:gravity="center">

        <ImageView
            android:id="@+id/ivOverallDistance"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingLeft="10dp"
            android:src="@drawable/distance" />

        <com.push.sweateliteathletics.softrasol.FontTextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/Distance"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.push.sweateliteathletics.softrasol.FontTextView
            android:id="@+id/tvOverallDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_black"
            android:textSize="20sp" />
    </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LayOverall7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1.0"
        android:background="@drawable/overallback"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivOverallCalories"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingLeft="10dp"
            android:src="@drawable/calories" />

        <com.push.sweateliteathletics.softrasol.FontTextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/Calories"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.push.sweateliteathletics.softrasol.FontTextView
            android:id="@+id/tvOverallCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LayOverall5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1.0"
        android:background="@drawable/overallback"
        android:gravity="center">

        <ImageView
            android:id="@+id/ivOverallDuration2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:paddingLeft="10dp"
            android:src="@drawable/time" />

        <com.push.sweateliteathletics.softrasol.FontTextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="@string/Pace"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <com.push.sweateliteathletics.softrasol.FontTextView
            android:id="@+id/tvOverallPace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_black"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
    </LinearLayout>
